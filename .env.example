# Example Environment Variables for BACnet MQTT Gateway
# Copy this file to .env and fill in your actual values.
# Do NOT commit your actual .env file to version control.

# MQTT Broker Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_GATEWAY_ID=bacnet_gateway_1
# TLS (optional)
MQTT_TLS_ENABLED=false
MQTT_TLS_CA_PATH=/path/to/ca.crt
MQTT_TLS_CERT_PATH=/path/to/client.crt
MQTT_TLS_KEY_PATH=/path/to/client.key
# Set to false if using self-signed certs
MQTT_TLS_REJECT_UNAUTHORIZED=true

# HTTP Server Configuration
HTTP_PORT=8082

# Logging Configuration
# Available levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Auth / Users
AUTH_DB_PATH=./data/auth.db
AUTH_JWT_SECRET=super_secret_jwt_key
AUTH_TOKEN_EXPIRES_IN=1h
