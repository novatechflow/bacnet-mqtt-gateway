{
    "mqtt": {
        "gatewayId": "default-bacnet-gateway",
        "host": "localhost",
        "port": 1883,
        "username": "default_user",
        "password": "default_password",
        "tls": {
            "enabled": false,
            "caPath": "",
            "certPath": "",
            "keyPath": "",
            "rejectUnauthorized": true
        }
    },
    "bacnet": {
        "configFolder": "./devices/",
        "maxSegments": 112,
        "maxAdpu": 5
    },
    "httpServer": {
        "enabled": true,
        "port": 8082
    },
    "logger": {
        "level": "info"
    },
    "auth": {
        "dbPath": "./data/auth.db",
        "jwtSecret": "change-me",
        "tokenExpiresIn": "1h"
    }
}
